@*Strong Typed*@
@model Application.ViewModel.PrestamosVM
@{
    Application.ViewModel.PrestamosVM ol = new();
}


    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h1>Calculadora de Prestamos</h1>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="MVCapp" asp-action="Prestamos">

                    <div class="mb-3 row-cols-3">
                        <label asp-for="Monto" class="form-label">Monto: </label>
                        <input asp-for="Monto" type="number" class="form-control" />
                    </div>

                <div class="mb-3 row-cols-3">
                        <label asp-for="TipoPrestamo" class="form-label">Tipo de Prestamo</label>
                        <select asp-for="TipoPrestamo" class="form-select" id="tipo" onchange="prestamo()">
                            <option>...</option>
                            <option value="1">Personal</option>
                            <option value="2">Automovil</option>
                            <option value="3">Hipotecario</option>
                        </select>
                    </div>

                <div class="mb-3 row-cols-3">
                    <label>Meses:</label>
                    <select asp-for="Meses" class="form-control-sm">
                        <option>...</option>
                        @for (int meses = 12; meses <= 120; meses = meses + 6)
                        {
                            <option value=@meses>@meses Meses</option>
                        }
                    </select>
                    </div>

                    <div class="mb-3 row-cols-3">
                        <label asp-for="TasaInteres" class="form-label">Tasa Interes: </label>
                    <input asp-for="TasaInteres" readonly type="number" class="form-control" id="intereses" />
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-danger">Clear</button>

                </form>
              

            </div>
        </div>
    </div>

<script>

    function prestamo() {
        const select = document.getElementById("tipo").value;
        if (select == 1) {
            const input = document.getElementById("intereses");
            input.value = 22;
        }
        else if (select == 2) {
            const input = document.getElementById("intereses");
            input.value = 12;
        }
        else if (select == 3) {
            const input = document.getElementById("intereses");
            input.value = 8;
        }
        else {
            const input = document.getElementById("intereses");
            input.value = 0;
        }
    }
</script>